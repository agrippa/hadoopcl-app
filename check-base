ssh-all (){

#	 ARG=" "
#	 while [ "$1" != "" ]
# 	 do
#		 #echo $1
#		ARG=$ARG" "$1
#		shift
# 	 done


	 for i in $NODES; do ssh -o ConnectTimeout=2 $i $@; done
}

